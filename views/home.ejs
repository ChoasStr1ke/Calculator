<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="./styles/style.css">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
		<title>Calculator</title>
	</head>
	<body>
		<div class="container">
			<div class="grid">
				<Button class="display">0</Button>
				<button class="operators">+</button>
				<button class="operators">-</button>
				<button class="operators">รท</button>
				<button class="operators">x</button>
				<button class="numbers">9</button>
				<button class="numbers">8</button>
				<button class="numbers">7</button>
				<button class="numbers">6</button>
				<button class="numbers">5</button>
				<button class="numbers">4</button>
				<button class="numbers">3</button>
				<button class="numbers">2</button>
				<button class="numbers">1</button>
				<button class="numbers">0</button>
				<button class="numbers">.</button>
				<button class="clear numbers">C</button>
				
				<button class="equals">=</button>
			</div>
		</div>
	</div>
</body>
<script src="Script.js"></script>
</html>